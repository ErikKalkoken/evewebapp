package templates

import (
	"time"

	"github.com/antihax/goesi/esi"

	"example/evewebapp/internal/store"
)

templ Home(user *store.User) {
	@base("Home", user) {
		<p>Welcome!</p>
	}
}

templ Medals(user *store.User, medals []esi.GetCharactersCharacterIdMedals200Ok) {
	@base("Medals", user) {
		if user != nil{
			<h1>Medals for { user.Name }</h1>

			<table class="table">
				<tr>
					<th>Date</th>
					<th>Title</th>
					<th>Description</th>
					<th>Reason</th>
				</tr>
				for _, m := range medals{
					<tr>
						<td>{ m.Date.Format(time.RFC3339) }</td>
						<td>{ m.Title }</td>
						<td>{ m.Description }</td>
						<td>{ m.Reason }</td>
					</tr>
				}
			</table>
		}
	}
}
